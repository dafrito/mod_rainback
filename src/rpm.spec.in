Name: @PACKAGE_NAME@

Version:	@PACKAGE_VERSION@
Release:	@PACKAGE_RELEASE@%{?dist}
Summary: rainback.com HTML

License:	Apache license 2.0
URL:		@PACKAGE_URL@
Source0:	@PACKAGE_NAME@-@PACKAGE_VERSION@.tar.gz
BuildRoot:	%(mktemp -ud %{_tmppath}/%{name}-%{version}-%{release}-XXXXXX)
BuildArch:	x86_64
Requires:   apr-devel

%description
Module with Marla HTML routes for rainback.com.

%prep
%setup -q

%build
make

%check

%install
mkdir -p %{buildroot}/%{_libdir}
cp mod_rainback.so %{buildroot}/%{_libdir}
cp templates/*.html %{buildroot}/%{_datadir}/parsegraph/templates/*

%files
%{_libdir}/mod_rainback.so
%{_datadir}/parsegraph/templates/*
